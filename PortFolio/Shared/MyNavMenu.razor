            <MudText Typo="Typo.body1" Class="px-4 mud-text-secondary"></MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person4">About Me</MudNavLink>
            <MudNavLink Href="/projects" Match="NavLinkMatch.Prefix" Icon="@Icons.Custom.Brands.GitHub">Projects</MudNavLink>
                <MudNavLink Href="/counter" Match="NavLinkMatch.Prefix">counter</MudNavLink>
            <MudNavGroup Title="Projects" Icon="@Icons.Material.Filled.ExitToApp" Expanded="true">
                <MudNavLink Href="https://movieapp.mario-g.com" Target="project" Icon="@Icons.Material.Filled.Theaters" IconColor="Color.Dark">Movie Master</MudNavLink>
            </MudNavGroup>
            
        </MudNavMenu>

